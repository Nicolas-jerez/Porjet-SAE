{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<main class="main-signin">
    <div class="content-connect">
    <form action="{{ path('connexion') }}" method="post">
        <h2 class="content-connect">Connexion</h2>
        <hr id="separation">
        <input type="text" id="login" name="_username" value="{{ last_username }}" placeholder="Identifiant"/>

        <input type="password" id="mdp" name="_password" placeholder="Mot de Passe"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <input type="submit" value="Connexion">
    </form>
    </div>
</main>
{% endblock %}